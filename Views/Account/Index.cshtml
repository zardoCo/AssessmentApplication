@model BankApp.ViewModel.AccountVM

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Account Balance</title>
</head>
<body>

    <h5>Welcome Client!</h5>
    <h5><small>Your Current Balance:</small> @String.Format("{0:#,##0.00}", Model.Balance)  CAD</h5>

    <form asp-action="Operation" method="post">
     
        <div>
            <label for="amount">Amount:</label>
            <input type="number" id="amount" name="amount" step="0.01" required />
            <select id="currency" name="currency">
                @foreach (var currency in Model.Currencies)
                {
                    <option value="@currency.Name">@currency.Name</option>
                }
            </select>
        </div>
       
        <div>
            <button class="btn btn-sm btn-success" type="submit" name="operation" value="deposit">Deposit</button>
            <button class="btn btn-sm btn-warning" type="submit" name="operation" value="withdraw">Withdraw</button>
        </div>
    </form>
</body>
</html>